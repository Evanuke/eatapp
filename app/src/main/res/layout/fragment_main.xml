<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/spacing_normal">

        <TextView
            android:id="@+id/fragment_main_logo_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textSize="@dimen/size_big" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@color/colorPrimary"
        android:orientation="vertical"
        android:padding="@dimen/spacing_normal">

        <TextView
            android:id="@+id/fragment_main_menu_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="@dimen/spacing_small"
            android:text="@string/menu"
            android:textColor="@color/white"
            android:textSize="@dimen/size_small" />

        <TextView
            android:id="@+id/fragment_main_meal_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="@dimen/spacing_small"
            android:text="@string/create_own"
            android:textColor="@color/white"
            android:textSize="@dimen/size_small" />

        <TextView
            android:id="@+id/fragment_main_ratings_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="@dimen/spacing_small"
            android:text="@string/ratings"
            android:textColor="@color/white"
            android:textSize="@dimen/size_small" />

        <TextView
            android:id="@+id/fragment_main_specials_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="@dimen/spacing_small"
            android:text="@string/specials"
            android:textColor="@color/white"
            android:textSize="@dimen/size_small" />

    </LinearLayout>

</RelativeLayout>